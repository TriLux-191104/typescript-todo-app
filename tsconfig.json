{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es6",
    "rootDir": "src",
    "outDir": "public/dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noEmitOnError": false,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "public/dist"]
}
